<div>
  <h1>New Game</h1>

<div style="display:flex;">
  <%@letters.each do |letter|%>
    <h2 style="padding: 15px; background-color: lightblue; margin: 10px;"><%=letter%></h2>
  <%end%>
  </div>
  <br>
  <form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= hidden_field_tag :letters, @letters %>
  <label for="word">What is the longest word you can find?</label><br><br>
    <input name="word" type="text">
    <input value="Play" type="submit">
</form>
</div>
